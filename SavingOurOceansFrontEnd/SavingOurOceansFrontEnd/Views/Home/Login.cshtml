<header class="page-header bg-primary text-white text-center registro">
    <span class="h4">
        Iniciar sesión
    </span>
</header>
<form action="" method="post" class="formulario" id="formLogin">
    <fieldset>
        <div class="form-group">
            <label for="email">Correo Electrónico: </label>
            <input type="email" class="form-control campo" id="email">
        </div>
        <div class="form-group">
            <label for="pass">Contraseña: </label>
            <input type="password" class="form-control campo" id="pass">
        </div>
        <div class="form-group">
            <a href="./../CreacionUsuario/user.html" class="form-control campo">Regístrate</a>
            <input type="submit" class="btn btn-success form-control" name="regiter">
        </div>
    </fieldset>
</form>